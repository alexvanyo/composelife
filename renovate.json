{
  "extends": [
    "config:recommended"
  ],
  "ignoreUnstable": false,
  "packageRules": [
    {
      "groupName": "Kotlin",
      "matchPackageNames": [
        "/^org.jetbrains.kotlin[^a-zA-Z]/",
        "/^com.google.devtools.ksp/",
        "/^dev.zacsweers.metro/"
      ]
    },
    {
      "groupName": "Android Gradle Plugin",
      "matchPackageNames": [
        "/^com.android.tools/"
      ]
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "allowedVersions": "!/-SNAPSHOT$/"
    }
  ]
}
