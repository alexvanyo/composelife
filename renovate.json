{
  "extends": [
    "config:recommended"
  ],
  "ignoreUnstable": false,
  "packageRules": [
    {
      "groupName": "Kotlin",
      "matchPackageNames": [
        "/^org.jetbrains.kotlin/",
        "/^com.google.devtools.ksp/",
        "/^androidx.compose.compiler/"
      ]
    },
    {
      "groupName": "Android Gradle Plugin",
      "matchPackageNames": [
        "/^com.android.tools/"
      ]
    },
    {
      "versioning": "docker",
      "matchPackageNames": [
        "/^com.google.guava/"
      ]
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "allowedVersions": "!/-SNAPSHOT$/"
    }
  ]
}
